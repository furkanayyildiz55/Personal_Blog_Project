@using BlogProject.ViewModels
@model FilterBlogListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/BlogLayout.cshtml";
}

                <!--section   -->
                <section>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="section-title">
                                    <h3>Filtreler:</h3>
                                </div>
                                  <form asp-controller="Blog" asp-action="Index" method="get">
                                    <!-- sidebar   -->
                                    <!-- box-widget -->
                                    <div class=" fl-wrap">
                                        <div class="widget-title" style="margin-bottom: 0; padding-bottom: 0;">Başlık</div>
                                        <div class="box-widget-content">
                                            <div class="search-widget fl-wrap">
                                                <input name="Title" id="se12" type="text" class="search" placeholder="Seçiniz..." asp-for="Title"/>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- box-widget  end -->
                                    <!-- box-widget -->
                                    <div class=" fl-wrap">
                                        <div class="widget-title" style="margin-bottom: 0; padding-bottom: 0;">Konu
                                        </div>
                                        <div class="box-widget-content">
                                            <select name="Category" id="list" class="style-select" asp-for="CategryId" asp-items="Model.CategoryItem">
                                            </select>
                                        </div>
                                    </div>
                                    <!-- box-widget  end -->
                                    <!-- box-widget -->
                                    <div class=" fl-wrap">
                                        <div class="widget-title" style="margin-bottom: 0; padding-bottom: 0;">Etiket
                                        </div>
                                        <div class="box-widget-content">
                                    <select name="Tag" id="list" class="style-select"  asp-for="TagId" asp-items="Model.TagItem">
                                    </select>
                                        </div>
                                    </div>
                                    <!-- box-widget  end -->
                                    <!-- sidebar  end -->
                                    <!-- box-widget -->
                                    <div class=" fl-wrap">
                                        <div class="widget-title" style="margin-bottom: 0; padding-bottom: 0;">Sıralama
                                        </div>
                                        <div class="box-widget-content">
                                            <select name="Order" id="list" asp-for="OrderId" 
                                                class="style-select ">
                                                <option value="1">En Çok Okunan</option>
                                                <option value="2">En Çok Yorum Alan</option>
                                                <option value="3">Yükleme Tarihine Göre En Yeni</option>
                                                <option value="4">Yükleme Tarihine Göre En Eski</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- box-widget  end -->
                                    <div class="footer-widget">
                                        <div class="footer-widget-content">
                                            <div class="subcribe-form fl-wrap"
                                                style="padding-top: 5px; margin-top: 5px;">
                                                   <button type="submit" id="subscribe-button" controller="Blog" action="Index"
                                                    class="subscribe-button color-bg">Fİltrele </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!--BLOGLAR-->
                            <div class="col-md-9">
                                <div class="main-container fl-wrap fix-container-init">
                                    <div class="section-title">
                                        <h3>Bloglar :</h3>

                                    </div>
                                    <!--grid-post-wrap-->
                                    <div class="grid-post-wrap">
                                        <div class="row">
                                            @foreach (var blog in Model.Blogs)
                                            {
                                                <!--grid-post-item-->
                                                <div class="col-md-6">
                                                    <div class="grid-post-item  bold_gpi  fl-wrap">
                                                        <div class="grid-post-media">
                                                                <a href="/Blog/Detail/@blog.UrlTitle" class="gpm_link">
                                                                <div class="bg-wrap">
                                                                    <div class="bg" data-bg="@blog.ThumbnailImage"></div>
                                                                </div>
                                                            </a>
                                                            <span class="post-media_title">Okumak İçin Tıkla</span>
                                                        </div>
                                                        <a class="post-category-marker purp-bg"
                                                           href="/Blog?Category=@blog.CategoryId">@blog.Category.Name</a>
                                                        <div class="grid-post-content">
                                                            <h3>
                                                                <a href="/Blog/Detail/@blog.UrlTitle">@blog.Title</a>
                                                            </h3>
                                                            <span class="post-date"><i class="far fa-clock"></i>@blog.ObjectIDate</span>
                                                        </div>
                                                        <div class="grid-post-footer">

                                                            <ul class="post-opt">
                                                                <li><i class="far fa-comments-alt"></i>@blog.CommnetCount</li>
                                                                <li><i class="fal fa-eye"></i>@blog.ViewsCount</li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--grid-post-item end-->
                                            }
                                        </div>
                                    </div>
@*                                     <!--grid-post-wrap end-->
                                    <div class="clearfix"></div>
                                    <div class="load-more_btn"><i class="fal fa-undo"></i>Daha Fazlası</div>
                                    <!--pagination-->
                                    <div class="pagination">
                                        <a href="blog3.html#" class="prevposts-link"><i
                                                class="fas fa-caret-left"></i></a>
                                        <a href="blog3.html#">01.</a>
                                        <a href="blog3.html#" class="current-page">02.</a>
                                        <a href="blog3.html#">03.</a>
                                        <a href="blog3.html#">04.</a>
                                        <a href="blog3.html#" class="nextposts-link"><i
                                                class="fas fa-caret-right"></i></a>
                                    </div>
                                    <!--pagination end--> *@
                                </div>
                            </div>

                        </div>
                        <div class="limit-box fl-wrap"></div>
                    </div>
                </section>
                <!-- section  -->