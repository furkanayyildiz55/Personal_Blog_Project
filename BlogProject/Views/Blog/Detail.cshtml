@using BlogProject.DTO
@model BlogListDTO

@{
    ViewBag.Title = Model.Blog.Title != null ? Model.Blog.Title : "Furkan Ayyıldız" ;
    ViewBag.VisibleRouteSection = false;
    Layout = "~/Views/Shared/BlogLayout.cshtml";
}

<script src="~/admin/highlight/highlight.min.js"></script>
<link href="~/admin/highlight/styles/base16/onedark.min.css" rel="stylesheet" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="main-container fl-wrap fix-container-init">
                    <!-- single-post-header  -->
                    <div class="single-post-header fl-wrap">
                        <a class="post-category-marker" href="/Blog/?Category=@Model.Blog.Category.ObjectId">@Model.Blog.Category.Name</a>
                        <div class="clearfix"></div>
                        <h1>@Model.Blog.Title</h1>
                        <div class="clearfix"></div>
                        <div class="author-link"><a href="/About/Index/"><img src="~/gmag/images/avatar/2.jpg" alt="">  <span>@Model.Blog.Writer.Name @Model.Blog.Writer.Surname</span></a></div>
                        <span class="post-date"><i class="far fa-clock"></i> @Model.Blog.ObjectIDate </span>
                        <ul class="post-opt">
                            <li><i class="far fa-comments-alt"></i> @Model.Blog.CommnetCount </li>
                            <li><i class="fal fa-eye"></i>  @Model.Blog.ViewsCount </li>
                        </ul>
                    </div>
                    <!-- single-post-header end   -->
                    <!-- single-post-media   -->
                    <div class="single-post-media fl-wrap">
                        <div class="single-slider-wrap fl-wrap">
                            <div class="single-slider fl-wrap">
                                <div class="swiper-container">
                                    <div class="swiper-wrapper lightgallery">
                                        <!-- swiper-slide   -->
                                        <div class="swiper-slide hov_zoom">
                                            <img src="@Model.Blog.MainImage" alt="">
                                            <a href="~/gmag/images/all/20.jpg" class="box-media-zoom   popup-image"><i class="fas fa-search"></i></a>
                                            <span class="post-media_title pmd_vis">© Image Copyrights Title</span>
                                        </div>
                                        <!-- swiper-slide end   -->
@*                                         <!-- swiper-slide   -->
                                        <div class="swiper-slide hov_zoom">
                                            <img src="~/gmag/images/all/13.jpg" alt="">
                                            <a href="~/gmag/images/all/13.jpg" class="box-media-zoom   popup-image"><i class="fas fa-search"></i></a>
                                            <span class="post-media_title pmd_vis">© Image Copyrights Title</span>
                                        </div>
                                        <!-- swiper-slide end   --> *@
                                    </div>
                                </div>
                            </div>
                            <div class="ss-slider-controls2">
                                <div class="ss-slider-pagination pag-style"></div>
                            </div>
                            <div class="ss-slider-cont ss-slider-cont-prev"><i class="fas fa-caret-left"></i></div>
                            <div class="ss-slider-cont ss-slider-cont-next"><i class="fas fa-caret-right"></i></div>
                        </div>
                    </div>
                    <!-- single-post-media end   -->
                    <!-- single-post-content   -->
                    <div class="single-post-content  fl-wrap">
@*                         <div class="single-post-content_column">
                            <div class="share-holder ver-share fl-wrap">
                                <div class="share-title">Bu Yazıyı <br> Paylaş:</div>
                                <div class="share-container  isShare"></div>
                            </div>
                        </div> *@
                        <div class="fs-wrap smpar fl-wrap">
                            <div class="fontSize"><span class="fs_title">Yazı Boyutu </span><input type="text" class="rage-slider" data-step="1" data-min="10" data-max="15" value="12"></div>
                            <div class="show-more-snopt smact"><i class="fal fa-ellipsis-v"></i></div>
                            <div class="show-more-snopt-tooltip">
                                <a href="#comments" class="custom-scroll-link"> <i class="fas fa-comment-alt"></i> Yorum Yap</a>
                                @* <a href="post-single.html#"> <i class="fas fa-exclamation-triangle"></i> Raporla </a> *@
                            </div>
                            <a class="print-btn" href="javascript:window.print()" data-microtip-position="bottom"><span>Yazdır</span><i class="fal fa-print"></i></a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="single-post-content_text" style="text-align:left;all:initial;" id="font_chage">

                            @Html.Raw(Model.Blog.Content)


                         </div>
                        <div class="single-post-footer fl-wrap">
                            <div class="post-single-tags">
                                <span class="tags-title"><i class="fas fa-tag"></i> Etiketler : </span>
                                <div class="tags-widget">
                                    @foreach (var item in Model.Tags)
                                    {
                                        <a href="/Blog/?Tag=@item.Tags.ObjectId">@item.Tags.Name</a>
                                    }
                                </div>
                            </div>
                        </div>
@*                         <!-- single-post-nav"   -->
                        <div class="single-post-nav fl-wrap">
                            <a href="post-single.html" class="single-post-nav_prev spn_box">
                                <div class="spn_box_img">
                                    <img src="~/gmag/images/all/2.jpg" class="respimg" alt="">
                                </div>
                                <div class="spn-box-content">
                                    <span class="spn-box-content_subtitle"><i class="fas fa-caret-left"></i> Prev Post</span>
                                    <span class="spn-box-content_title">New VR Glasses and Headset System Release</span>
                                </div>
                            </a>
                            <a href="post-single.html" class="single-post-nav_next spn_box">
                                <div class="spn_box_img">
                                    <img src="~/gmag/images/all/20.jpg" class="respimg" alt="">
                                </div>
                                <div class="spn-box-content">
                                    <span class="spn-box-content_subtitle">Next Post <i class="fas fa-caret-right"></i></span>
                                    <span class="spn-box-content_title">$310m to help businesses in latest Lockdow</span>
                                </div>
                            </a>
                        </div>
                        <!-- single-post-nav"  end   --> *@
                    </div>
                    <!-- single-post-content  end   -->
                    <div class="limit-box2 fl-wrap"></div>
                    <!-- post-author-->
                    <div class="post-author fl-wrap">
                        <div class="author-img">
                            <img src="~/gmag/images/avatar/2.jpg" alt="">
                        </div>
                        <div class="author-content fl-wrap">
                            <h5>Yazar <a href="/About/Index/">Furkan Ayyıldız</a></h5>
                            <p>Yazılım Mühendisi</p>
                        </div>
                        <div class="profile-card-footer fl-wrap">
                            <a href="/About/Index/" class="post-author_link">PROFİLİ GÖRÜNTÜLE <i class="fas fa-caret-right"></i></a>
                            <div class="profile-card-footer_soc">
                                <div class="profile-card-footer_title">Takip: </div>
                                <div class="profile-card-social">
                                    <ul>
                                        <li><a href="https://github.com/furkanayyildiz55" target="_blank"><i class="fab fa-github"></i></a></li>
                                        <li><a href="https://www.linkedin.com/in/furkanayy%C4%B1ld%C4%B1z/" target="_blank"><i class="fab fa-linkedin"></i></a></li>
                                        <li><a href="https://www.instagram.com/furkan55ss/" target="_blank"><i class="fab fa-instagram"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
@*                     <!--post-author end-->
                    <div class="more-post-wrap  fl-wrap">
                        <div class="pr-subtitle prs_big">Son Yazılar</div>
