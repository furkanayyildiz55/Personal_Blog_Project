                                        </div>
                                    </div>
                                    <!--list-post end-->
                                </div>
                            </div>
                        </div>
                    </div> *@
                    @await Component.InvokeAsync("BlogCommentWidget", new {BlogId = Model.Blog.ObjectId} )

                </div>
            </div>
            <div class="col-md-4">
                <!-- sidebar   -->
                <div class="sidebar-content fl-wrap fixed-bar">
                    @await Html.PartialAsync("~/Views/Shared/Partial/BoxWidgetPartial.cshtml")
                </div>
                <!-- sidebar  end -->
            </div>
        </div>
        <div class="limit-box fl-wrap"></div>
    </div>
</section>

