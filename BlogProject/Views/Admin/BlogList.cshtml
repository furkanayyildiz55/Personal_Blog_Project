@using BlogProject.DTO
@model List<BlogListDTO>

@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">


    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="product_name">Blog Adı</label>
                    <input type="text" id="product_name" name="product_name" value="" placeholder="Blog Adı" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="Konu">Konu</label>
                    <input type="text" id="Konu" name="Konu" value="" placeholder="Konu" class="form-control">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="Tag">Tag</label>
                    <input type="text" id="Tag" name="Tag" value="" placeholder="Tag" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="Durum">Durum</label>
                    <select name="Durum" id="Durum" class="form-control">
                        <option value="1" selected>Aktif</option>
                        <option value="0">Pasif</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="Durum">Tarih Başlancıç</label>
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" value="03/04/2014">
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="col-form-label" for="Durum">Tarih Bitiş</label>
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" value="03/04/2014">
                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th data-toggle="true">Blog Adı</th>
                                <th data-hide="phone">Görüntülenme</th>
                                <th data-hide="phone">Yorum</th>
                                <th data-hide="phone">Konu</th>
                                <th data-hide="phone,tablet">Tag</th>
                                <th data-hide="phone">Durum</th>
                                <th class="text-right" data-sort-ignore="true">Eylem</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                       @item.Blog.Title
                                    </td>
                                    <td>
                                        @(item.Blog.ViewsCount )
                                    </td>
                                    <td>
                                        @(item.Blog.CommnetCount )
                                    </td>
                                    <td>
                                        @item.Blog.Category.Name
                                    </td>
                                    <td>
                                       
                                        @foreach (var tag in item.Tags)
                                        {
                                            <span class="label label-success" style="margin-right: 3px;">
                                            @tag.Tags.Name
                                            </span>
                                        }
                                        
                                    </td>
                                    <td>
                                        @if (item.Blog.ObjectStatus == 1)
                                        {
                                            <span class="label label-primary">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a target="_blank" href="/Blog/Detail/@item.Blog.UrlTitle" class="btn-white btn btn-xs">Görüntüle</a>
                                            <a href="/Admin/UpdateBlog/@item.Blog.UrlTitle" class="btn-white btn btn-xs">Düzenle</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>
